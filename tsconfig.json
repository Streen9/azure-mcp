{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src", 
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc",
    "preferTsExts": true,
    "logError": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}